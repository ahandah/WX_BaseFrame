.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.view-row {
  display: flex;
  flex-direction: row;
}

.view-column {
  display: flex;
  flex-direction: column;
}

/* .divide-x {
  background: #efefef;
